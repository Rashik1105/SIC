{
  "build": {
    "builder": "Nixpacks",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn SocialInfluencersConnect.wsgi --bind 0.0.0.0:$PORT",
    "env": {
      "PYTHON_VERSION": "3.10"
    }
  },
  "services": [
    {
      "name": "celery-worker",
      "startCommand": "celery -A SocialInfluencersConnect worker --loglevel=info"
    },
    {
      "name": "celery-beat",
      "startCommand": "celery -A SocialInfluencersConnect beat --loglevel=info"
    }
  ]
}
